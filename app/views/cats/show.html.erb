<h1><%= @cat.name %></h1>
<table>
  <tr>
    <th>Age</th>
    <th>Sex</th>
    <th>Color</th>
  </tr>
  <tr>
    <td><%= @cat.age %> years</td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.color %></td>
  </tr>
</table>
<h3>Description: </h3>
<%= @cat.description %>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
<% @cat.rental_requests.order(:start_date).each do |request| %>
    <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.status %></td>
    <%= render 'approve_deny', request: request %>
  </tr>
<% end %>
</table>
